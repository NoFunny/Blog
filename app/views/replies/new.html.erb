<%= form_for([@post, @comment, @comment.comments.build]) do |f| %>
  <p>
    Ты <%= current_user.name %> <br>
  </p>
  <p>
    Текст комментария <br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit("Добавить комментарий",{:class => 'btn btn-warning'}) %>
  </p>
    <% end %>